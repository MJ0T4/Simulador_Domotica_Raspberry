<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mario.app_android.Servidor"
    tools:showIn="@layout/activity_servidor">

    <EditText
        android:id="@+id/etIP"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:ems="10"
        android:hint="IP"
        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etPuerto"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/etIP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:ems="10"
        android:hint="Puerto"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Actualizar" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btActualizar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:text="El estado de conexiÃ³n con el servidor es" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="No conectado"
        android:textColor="@color/colorRed"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btConectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btActualizar"
        android:layout_below="@+id/tvEstado"
        android:layout_marginTop="29dp"
        android:text="Conectar" />

    <Button
        android:id="@+id/btDesconectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btConectar"
        android:layout_alignBottom="@+id/btConectar"
        android:layout_alignStart="@+id/btActualizar"
        android:text="Desconectar"
        android:visibility="invisible" />


</RelativeLayout>
