<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:background="#1075ce">

    <ImageView
        android:id="@+id/imagenLuz"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        app:srcCompat="@drawable/luzapagada2" />

    <TextView
        android:id="@+id/tvNombreLuz"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_above="@+id/tvEstado"
        android:layout_toEndOf="@+id/imagenLuz"
        android:layout_marginStart="32dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_above="@+id/viewLuz"
        android:layout_toEndOf="@+id/imagenLuz"
        android:layout_marginStart="34dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <View
        android:id="@+id/viewLuz"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"></View>

    <Switch
        android:id="@+id/switchEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/tvNombreLuz"
        android:shadowColor="@color/colorBlack"
        android:text=""
        android:textOff=""
        android:textOn="" />

</RelativeLayout>
